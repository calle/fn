# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Sprinkler
GET     /                                       Sprinkler.index
GET     /sprinkle                               Sprinkler.index
GET     /sprinkle/test                          Sprinkler.test
POST    /sprinkle                               Sprinkler.send
POST    /sprinkle/shutdown                      Sprinkler.shutdown
GET     /sprinkle/{uuid}                        Sprinkler.status

GET     /sprinkle/ext/                          ExternalJson.index
GET     /sprinkle/ext/register                  ExternalJson.register
POST    /sprinkle/ext/register                  ExternalJson.register
GET     /sprinkle/ext/{action}                  ExternalJson.{action}
POST    /sprinkle/ext/{action}                  ExternalJson.{action}

# Catch all
*       /{controller}/{action}                  {controller}.{action}
